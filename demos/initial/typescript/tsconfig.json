{
    "compilerOptions": {
        "lib": [ "es2015" ],        
        "module": "commonjs",
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "outDir": "output",
        "sourceMap": true,
        "target": "es5",
        "types": [ "node" ],
        "typeRoots": [ "node_modules/@types" ]
    },
    "include": [
        "./src/**/*"
    ],
    "exclude": [
        "node_modules/",
        "**/*.spec.ts"
    ]
}